{
    "$schema": "/etc/xdg/swaync/config-schema.json",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "overlay",
    "layer-shell": true,
    "cssPriority": "user",
    "notification-window-width": 550,
    "notification-body-image-height": 200,
    "notification-body-image-width": 200,
    "timeout": 10,
    "timeout-low": 5,
    "timeout-critical": 0,
    "widgets": [
        "inhibitors",
        "title",
        "dnd",
        "notifications"
    ],
    "widget-config": {
        "inhibitors": {
            "text": "Notifications Paused",
            "button-text": "Resume",
            "clear-all-button-text": "Clear All"
        },
        "title": {
            "text": "Notifications",
            "clear-all-button-text": "Clear All"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "notifications": {
            "text": "No Notifications",
            "clear-all-button-text": "Clear All"
        }
    }
}
